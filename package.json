{
  "name": "user_api",
  "version": "1.0.0",
  "description": "Users API build with express and Sequalize",
  "private": true,
  "scripts": {
    "ci": "istanbul cover _mocha -- -R xunit > $CIRCLE_TEST_REPORTS/unit/results.xml",
    "lint": "standard",
    "test": "npm run lint && npm run test:coverage",
    "start": "scripts/start.sh",
    "test:coverage": "NODE_PATH=${PWD} istanbul cover _mocha",
    "test:watch": "NODE_PATH=${PWD} mocha --watch",
    "posttest": "istanbul check-coverage"
  },
  "dependencies": {
    "body-parser": "~1.15.2",
    "express": "~4.14.0",
    "express-test-util": "^1.1.5",
    "lodash": "^4.17.4",
    "morgan": "~1.7.0",
    "pg": "^6.1.2",
    "pg-hstore": "^2.3.2",
    "q": "^1.4.1",
    "sequelize": "^3.29.0",
    "swagger-jsdoc": "^1.9.1",
    "swagger-ui-express": "^1.0.3"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "coveralls": "^2.11.16",
    "dirty-chai": "^1.2.2",
    "istanbul": "^1.0.0-alpha.2",
    "mocha": "^3.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.11.0",
    "sinon": "^1.17.7",
    "sinon-chai": "^2.8.0",
    "standard": "^8.6.0"
  },
  "standard": {
    "globals": [
      "expect",
      "it",
      "beforeEach",
      "afterEach",
      "expect",
      "sandbox",
      "afterEach",
      "sinon",
      "describe"
    ]
  }
}
